programa practica1ej3
procesos
  proceso recorrer(E tamanio:numero ES f:numero ES p: numero)
  comenzar
    repetir tamanio
      mientras(HayFlorEnLaEsquina)
        tomarFlor
        f:=f+1
      mientras(HayPapelEnLaEsquina)
        tomarPapel
        p:=p+1
      mientras(HayFlorEnLaBolsa)
        depositarFlor
      mientras(HayPapelEnLaBolsa)
        depositarPapel
      mover
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot escalon
  variables
    tam, cantF,cantP, supera: numero
  comenzar
    tam:=1
    supera:=0
    repetir 4
      cantF:=0
      cantP:=0
      recorrer(tam, cantF, cantP)
      derecha
      recorrer(tam, cantF, cantP)
      repetir 3
        derecha
      si((cantP-cantF)=1)
        supera:=supera+1
      tam:=tam+1
    Informar(supera)
  fin
variables
  rob1: escalon
  rob2: escalon
  rob3: escalon
comenzar
  AsignarArea(rob1, ciudad)
  AsignarArea(rob2, ciudad)
  AsignarArea(rob3, ciudad)
  Iniciar(rob1, 12,14)
  Iniciar(rob2, 17,10)
  Iniciar(rob3, 22,6)
fin